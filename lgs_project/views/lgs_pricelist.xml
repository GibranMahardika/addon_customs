<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="lgs_pricelist_view_tree" model="ir.ui.view">
        <field name="name">lgs_pricelist.view.tree</field>
        <field name="model">lgs.pricelist</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="currency_id" />
                <field name="company_id" />
                <field name="origin_id" />
                <field name="destination_id" />
                <field name="model_id" />
                <field name="price" />
            </tree>
        </field>
    </record>

    <record id="lgs_pricelist_view_form" model="ir.ui.view">
        <field name="name">lgs_pricelist.view.form</field>
        <field name="model">lgs.pricelist</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <h1>
                        <field name="name" />
                    </h1>
                    <group>
                        <group>
                            <field name="currency_id" />
                            <field name="company_id" />
                            <field name="origin_id" />
                            <field name="destination_id" />
                            <field name="model_id" />
                            <field name="price" />
                        </group>
                    </group>
                    <notebook>
                        <page name="price_rules" string="Price Rules">
                            <field name="item_ids">
                                <tree>
                                    <field name="fixed_price" optional="show" />
                                    <field name="date_start" optional="hide" />
                                    <field name="date_end" optional="hide" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>