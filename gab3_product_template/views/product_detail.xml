<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>

        <record id="product_detail_view_tree" model="ir.ui.view">
            <field name="name">product_detail.view.tree</field>
            <field name="model">product.detail</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name" />
                    <field name="description" />
                </tree>
            </field>
        </record>

        <record id="product_detail_view_form" model="ir.ui.view">
            <field name="name">product_detail.view.form</field>
            <field name="model">product.detail</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="description" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>


</odoo>
