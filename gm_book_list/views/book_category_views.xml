<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
        <record id="book_category_view_tree" model="ir.ui.view">
            <field name="name">book_category.view.tree</field>
            <field name="model">book.category</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name" />
                </tree>
            </field>
        </record>

        <record id="book_category_view_form" model="ir.ui.view">
            <field name="name">book_category.view.form</field>
            <field name="model">book.category</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name" />
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>
            </field>
        </record>

    </data>


</odoo>